generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("user") // admin, user
  apiKey        String?   @unique // API key for external automation (Make.com, Zapier)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  prompts       Prompt[]
  history       PromptHistory[]
  templates     Template[]
  projects      Project[]
  channels      Channel[]
  settings      UserSettings?
  subscription  Subscription?
}

model UserSettings {
  id            String    @id @default(cuid())
  geminiKey     String?   // Google Gemini API Key
  openaiKey     String?   // OpenAI API Key
  deepseekKey   String?   // Deepseek API Key
  anthropicKey  String?   // Anthropic API Key
  geminiModel   String    @default("gemini-2.0-flash")
  openaiModel   String    @default("gpt-4o-mini")
  deepseekModel String    @default("deepseek-chat")
  anthropicModel String   @default("claude-3-haiku-20240307")
  preferredAI   String    @default("gemini") // gemini, openai, deepseek, anthropic
  defaultSceneLength Int  @default(8)  // seconds per scene
  defaultAspectRatio String @default("16:9")
  language      String    @default("vi")
  updatedAt     DateTime  @updatedAt
  
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model Prompt {
  id            String    @id @default(cuid())
  title         String
  content       String    // Full compiled prompt text
  structure     String    // JSON structure of prompt sections
  category      String?
  tags          String?   // JSON array of tags
  isFavorite    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Template {
  id            String    @id @default(cuid())
  name          String
  nameVi        String?   // Vietnamese name
  description   String?
  descriptionVi String?   // Vietnamese description
  category      String    // cinematic, product, nature, scifi, romance, horror, music
  structure     String    // JSON structure
  thumbnail     String?
  isPublic      Boolean   @default(true)
  usageCount    Int       @default(0)
  createdAt     DateTime  @default(now())
  
  createdById   String?
  createdBy     User?     @relation(fields: [createdById], references: [id])
}

model PromptHistory {
  id            String    @id @default(cuid())
  promptText    String
  structure     String?   // JSON structure
  exportFormat  String?   // text, json, api
  createdAt     DateTime  @default(now())
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id            String    @id @default(cuid())
  title         String
  description   String?   // Mô tả nội dung câu chuyện
  genre         String    // action, drama, horror, thriller, romance, scifi, comedy, documentary
  visualStyle   String?   // Visual style: cinematic, anime, jellytoon, watercolor, etc.
  selectedIdea  String?   // JSON: Ý tưởng đã chọn
  storyOutline  String?   // AI-generated or user story outline
  totalScenes   Int       @default(10)
  generatedScenes Int     @default(0)
  status        String    @default("draft") // draft, generating, completed, error
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenes        Scene[]
  characters    Character[]
}

model Scene {
  id            String    @id @default(cuid())
  order         Int       // Thứ tự cảnh (1, 2, 3...)
  title         String?   // Tên cảnh (Scene 1: Opening)
  promptText    String    // Full prompt - inline, no line breaks
  structure     String?   // JSON structure nếu cần edit
  duration      Int       @default(8) // seconds
  hookType      String?   // opening, cliffhanger, reveal, twist, tension, payoff, callback, closing
  notes         String?   // Ghi chú cho scene
  isEdited      Boolean   @default(false) // User đã edit chưa
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Character {
  id            String    @id @default(cuid())
  name          String
  role          String    // protagonist, antagonist, supporting, extra
  fullDescription String  // VERBATIM: Copy này vào mọi scene
  appearance    String?   // Chi tiết ngoại hình
  clothing      String?   // Trang phục mặc định
  accessories   String?   // Phụ kiện, vật dụng
  personality   String?   // Tính cách (cho AI reference)
  voiceStyle    String?   // Giọng nói, cách nói
  skinTone      String?   // Chi tiết màu da
  faceDetails   String?   // Chi tiết khuôn mặt
  hairDetails   String?   // Chi tiết kiểu tóc
  createdAt     DateTime  @default(now())
  
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Setting {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String
  updatedAt     DateTime  @updatedAt
}

// ============================================
// YOUTUBE CHANNEL SYSTEM
// ============================================

model Channel {
  id                String    @id @default(cuid())
  name              String    // Tên kênh YouTube
  niche             String    // Chủ đề/Ngách (VD: "Tâm lý học", "Khoa học vui")
  description       String?   // Mô tả kênh chi tiết (AI-generated)
  nicheKeywords     String?   // Keywords phân tích từ niche
  knowledgeBase     String?   // JSON: thông tin từ YouTube trends, có thể edit
  trendingChannels  String?   // JSON: các kênh trending đã tìm được
  targetAudience    String?   // Đối tượng khán giả
  contentStyle      String?   // Phong cách nội dung
  visualStyleId     String?   // Style ID đã chọn
  visualStyleKeywords String? // Keywords cho style
  hasCharacters     Boolean   @default(true) // Có sử dụng nhân vật không
  suggestedCharCount Int?     // AI đề xuất số nhân vật
  dialogueLanguage  String    @default("vi") // vi = tiếng Việt, en = tiếng Anh
  
  // Branding Data (generated by AI)
  brandingData      String?   // JSON: { tags, logoPrompts, bannerPrompts, channelKeywords, suggestedColors, targetAudience, nameSuggestions }
  
  // Channel Type
  channelType       String    @default("general") // general, fashion_showcase, product_review...
  
  // Fashion Showcase Settings (lưu để dùng lại)
  fashionBackground   String?   // Background preset ID (fitting_room, bedroom, etc.)
  fashionBackgroundCustom String? // Custom background description
  fashionBackgroundImage String? // Base64 của background image nếu upload
  
  // YouTube Defaults (nhập 1 lần, dùng cho tất cả episodes)
  youtubeDefaults     String?   // JSON: { socialLinks, affiliateLinks, channelTagline, defaultHashtags }
  thumbnailStyleId    String?   // ID của thumbnail style đã chọn
  
  // Continuity Style (Phong cách liên tục)
  defaultContinuityStyleId String?   // Style mặc định cho episodes mới
  
  // Relations
  characters        ChannelCharacter[]
  episodes          Episode[]
  categories        EpisodeCategory[]
  products          Product[]
  continuityStyles  ContinuityStyle[]
  
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}


model ChannelCharacter {
  id              String    @id @default(cuid())
  name            String
  role            String    // host, sidekick, narrator, mascot, etc.
  fullDescription String    // Mô tả chi tiết để dùng xuyên suốt
  appearance      String?   // Ngoại hình
  clothing        String?   // Trang phục mặc định
  skinTone        String?   // Màu da
  faceDetails     String?   // Chi tiết khuôn mặt
  hairDetails     String?   // Chi tiết tóc
  personality     String?   // Tính cách
  voiceStyle      String?   // Giọng nói
  isMain          Boolean   @default(false) // Nhân vật chính
  createdAt       DateTime  @default(now())
  
  channelId       String
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
}

model Episode {
  id              String    @id @default(cuid())
  episodeNumber   Int       // Tập số mấy
  title           String
  synopsis        String?   // Tóm tắt nội dung (AI tự tạo)
  storyOutline    String?   // Kịch bản chi tiết
  topicIdea       String?   // Ý tưởng chủ đề episode
  totalScenes     Int       @default(10)
  generatedScenes Int       @default(0)
  status          String    @default("draft") // draft, generating, completed, error
  
  // Continuity Style (override channel default)
  continuityStyleId String?
  continuityStyle   ContinuityStyle? @relation(fields: [continuityStyleId], references: [id], onDelete: SetNull)
  
  scenes          EpisodeScene[]
  products        Product[]
  
  channelId       String
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  categoryId      String?   // Danh mục episode (tùy chọn)
  category        EpisodeCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  metadata        String?   // JSON: youtubeTitle, youtubeDescription, youtubeTags, thumbnailPrompt
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Danh mục để quản lý Episodes theo thư mục
model EpisodeCategory {
  id          String    @id @default(cuid())
  name        String    // Tên danh mục
  description String?   // Mô tả danh mục
  color       String    @default("#6366f1") // Màu tag hiển thị
  order       Int       @default(0) // Thứ tự sắp xếp
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  channelId   String
  channel     Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  episodes    Episode[]
}

// ============================================
// CONTINUITY STYLE SYSTEM
// ============================================

model ContinuityStyle {
  id              String    @id @default(cuid())
  name            String    // Tên style: "Mia Anthropologist Style"
  
  // Core Continuity Elements
  subjectDefault  String?   // Mô tả subject mặc định
  palette         String    // Bảng màu: "Warm amber, deep teal, muted greens"
  environment     String?   // Môi trường mặc định
  lighting        String    // Ánh sáng: "Dramatic, directional, ethereal glows"
  cameraStyle     String    // Camera: "Smooth, cinematic, dolly, track, crane"
  visualStyle     String    // Style: "Science documentary, mysterious, cinematic"
  audioMood       String?   // Âm thanh/mood: "Ambient electronic, mysterious"
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  channelId       String
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  episodes        Episode[]
}

model EpisodeScene {
  id            String    @id @default(cuid())
  order         Int       // Thứ tự cảnh
  title         String?
  promptText    String    // Full prompt với character descriptions
  duration      Int       @default(8)
  hookType      String?   // opening, climax, etc.
  notes         String?
  isEdited      Boolean   @default(false)
  generatedImageUrl String? // URL của ảnh đã generate bằng Imagen
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  episodeId     String
  episode       Episode   @relation(fields: [episodeId], references: [id], onDelete: Cascade)
}

// ============================================
// FASHION SHOWCASE / PRODUCT SYSTEM
// ============================================

model Product {
  id              String    @id @default(cuid())
  name            String    // Tên sản phẩm
  description     String?   // Mô tả sản phẩm
  price           Float?    // Giá gốc
  salePrice       Float?    // Giá khuyến mãi
  discount        String?   // Phần trăm giảm giá hoặc text
  promotion       String?   // Thông tin khuyến mãi (freeship, tặng quà...)
  
  // Image info
  imageUrl        String    // URL hình ảnh sản phẩm đã upload
  imageBase64     String?   // Base64 của hình (cho AI analysis)
  
  // AI Analysis results
  aiAnalysis      String?   // JSON: loại đồ, màu, chất liệu, style...
  productType     String?   // Loại: áo, quần, váy, giày, túi...
  color           String?   // Màu chính
  material        String?   // Chất liệu
  style           String?   // Style: sexy, casual, formal, sporty...
  
  // Relations
  episodeId       String?
  episode         Episode?  @relation(fields: [episodeId], references: [id], onDelete: SetNull)
  
  channelId       String
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// =====================================================
// SUBSCRIPTION & BILLING SYSTEM
// =====================================================

// Subscription Plans (Admin-configurable)
model Plan {
  id              String   @id @default(cuid())
  name            String   // "Free", "Starter", "Pro", "Enterprise"
  slug            String   @unique // "free", "starter", "pro", "enterprise"
  description     String?
  
  // Pricing
  priceMonthly    Float    @default(0)
  priceYearly     Float    @default(0)
  yearlyDiscount  Int      @default(0) // Percentage discount for annual
  
  // Limits
  maxChannels     Int      @default(1)
  maxEpisodesPerMonth Int  @default(5)
  maxApiCalls     Int      @default(0) // 0 = no API access
  
  // Feature Flags (JSON string)
  features        String   @default("{}") 
  
  // Display
  isPopular       Boolean  @default(false)
  sortOrder       Int      @default(0)
  isActive        Boolean  @default(true)
  
  // External IDs (Stripe/PayPal)
  stripeProductId     String?
  stripePriceMonthly  String?
  stripePriceYearly   String?
  paypalPlanMonthly   String?
  paypalPlanYearly    String?
  
  subscriptions   Subscription[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Payment Gateway Configuration
model PaymentGateway {
  id          String   @id @default(cuid())
  name        String   @unique // "stripe", "paypal"
  displayName String   // "Stripe", "PayPal"
  isEnabled   Boolean  @default(false)
  
  // Encrypted credentials (JSON)
  credentials String   @default("{}")
  
  // Settings
  testMode    Boolean  @default(true)
  sortOrder   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// User Subscription
model Subscription {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  planId          String
  plan            Plan     @relation(fields: [planId], references: [id])
  
  status          String   @default("active") // active, trialing, canceled, past_due, expired
  billingCycle    String   @default("monthly") // monthly, yearly
  
  // Payment info
  gateway         String?  // "stripe", "paypal"
  externalId      String?  // Stripe/PayPal subscription ID
  customerId      String?  // Stripe/PayPal customer ID
  
  // Dates
  trialEndsAt     DateTime?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  canceledAt      DateTime?
  
  // Usage tracking (reset monthly)
  apiCallsUsed    Int      @default(0)
  episodesCreated Int      @default(0)
  usageResetAt    DateTime @default(now())
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
